generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  EMPLOYEE
}

enum ProjectStatus {
  ACTIVE
  COMPLETED
  ARCHIVED
}

enum TimeLogStatus {
  TODO
  IN_PROGRESS
  DONE
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String
  password  String
  role      Role      @default(EMPLOYEE)
  timeLogs  TimeLog[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Project {
  id          String        @id @default(cuid())
  name        String
  description String?
  billingRate Float
  status      ProjectStatus @default(ACTIVE)
  archivedAt  DateTime?
  timeLogs    TimeLog[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model TimeLog {
  id        String        @id @default(cuid())
  projectId String
  userId    String
  hours     Float
  notes     String?
  logDate   DateTime
  status    TimeLogStatus @default(TODO)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  project Project @relation(fields: [projectId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@index([projectId])
  @@index([userId])
  @@index([logDate])
}
